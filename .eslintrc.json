{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "plugin:flowtype/recommended",
        "prettier",
        "prettier/react"
    ],
    "plugins": [
        "flowtype",
        "prettier"
    ],
    "env": { 
        "jest": true,
        "browser": true,
        "node": true
     },
     "rules": { 
         "react/jsx-filename-extension": [0],
         "no-use-before-define": ["error", { "variables": false }],
         "no-underscore-dangle": ["error", { "allow": [ "_loginObject" ] }]
     },
     "settings": {
         "import/resolver": {
            "node": {
                "paths": ["src"]
            }
         }
     }
     
}
